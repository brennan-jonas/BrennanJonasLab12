import pytest
from television import Television

def test_power():
    tv = Television()
    tv.power()
    assert tv.status == True


def test_channel_down():
    tv = Television()
    tv.channel = 3
    tv.channel_down()
    assert tv.channel == 2

def test_channel_up():
    tv = Television()
    tv.channel_up()
    assert tv.channel == 1


def test_volume_up():
    tv = Television()
    tv.volume_up()
    assert tv.volume == 1

def test_volume_down():
    tv = Television()
    tv.volume = 2
    tv.volume_down()
    assert tv.volume == 1

def test_str():
    tv = Television()
    assert str(tv) == 'Power = False, Channel = 0, Volume = 0'

def test_mute():
    tv = Television()
    tv.mute()
    assert tv.muted == True

def test_vol_switch():
    tv = Television()
    tv.volume = 0
    tv.volume_down()
    assert tv.volume == tv.max_volume
    
def test_mute_switch():
    tv = Television()
    tv.volume_down()
    tv.volume_up()
    assert tv.muted == False




if __name__ == "__main__":
    pytest.main()
